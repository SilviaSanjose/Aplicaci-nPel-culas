@model IEnumerable<MovieViewModel>  //indicamos que es una lista
@{
    ViewBag.Title = "Home Page";
}
<table class="table">
  <thread>
    <tr>
      <th>Nombre</th>
      <th>Género</th>
      <th><a asp-controller="App" asp-action ="AddOrEdit" class="btn btn-primary">Agregar Película</a></th>
    </tr>
  </thread>
  <tbody>
  @foreach (var item in Model)
  {
    <tr>
      <td>@item.Name</td>
      <td>@item.Genre</td>
      <td>
        <a asp-action="AddOrEdit" asp-route-id="@item.Id">Editar</a>
        <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Estas seguro de eliminar')">Eliminar</a></td>
      </tr>  
  }
  </tbody>
</table>
  
    